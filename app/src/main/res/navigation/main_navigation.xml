<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/listFragment">

    <fragment
        android:id="@+id/listFragment"
        android:name="ie.wit.hive.ui.list.ListFragment"
        android:label="List of Hives"
        tools:layout="@layout/fragment_list" />
    <fragment
        android:id="@+id/addFragment"
        android:name="ie.wit.hive.ui.add.AddFragment"
        android:label="Add Hive to Database"
        tools:layout="@layout/fragment_add" />
    <fragment
        android:id="@+id/aboutusFragment"
        android:name="ie.wit.hive.ui.about.AboutFragment"
        android:label="About App"
        tools:layout="@layout/fragment_about" />
    <fragment
        android:id="@+id/updateFragment"
        android:name="ie.wit.hive.ui.update.UpdateFragment"
        android:label="fragment_update"
        tools:layout="@layout/fragment_update" />
    <activity
        android:id="@+id/login"
        android:name="ie.wit.hive.ui.auth.Login"
        android:label="Login" />

    <fragment
        android:id="@+id/mapsFragment"
        android:name="ie.wit.hive.ui.map.MapsFragment"
        android:label="Map of Hive Locations"
        tools:layout="@layout/fragment_maps" />
    <fragment
        android:id="@+id/registerFragment"
        android:name="ie.wit.hive.ui.register.RegisterFragment"
        android:label="RegisterFragment" />

</navigation>